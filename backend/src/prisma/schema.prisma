generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
  deletedAt       DateTime?
  status          Boolean   @default(true)
  name            String
  surname         String
  dateOfBirth     DateTime?
  email           String    @unique
  password        String
  role            Role      @default(user)
  Volunteer       Boolean   @default(false)
  isEmailVerified Boolean   @default(false)
  Token           Token[]
  CommunityMembership CommunityMembership[]
}

model Tree {
  id              Int       @id @default(autoincrement())
  kimlikid        Int       @unique
  name            String?
  communityId     Int
  coordinates     String

  dateOfBirth     DateTime?
  age             Int?
  
  Volunteer       Boolean  @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
  
  Community       Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  
  @@index([communityId])
}

model Token {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  token       String
  type        TokenType
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId      Int
  expiresAt   DateTime
  blacklisted Boolean   @default(false)
}

model Community {
  id          Int       @id @default(autoincrement())
  name        String
  description String?

  Totaltrees  Int?
  EmptyTree   Int?

  AdminName   String?
  AdminPhone  String?
  AdminSocial String?

  location    String?
  CenterPointCoord String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  CommunityMembership CommunityMembership[]
  Tree        Tree[]
}




model CommunityMembership {
  id          Int       @id @default(autoincrement())
  userId      Int
  communityId Int
  CommunityRole CommunityRoles @default(CUser) 
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  
  User        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  Community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  
  @@unique([communityId, userId])
  @@index([userId])
  @@index([communityId])
}

enum Role {
  user
  admin
}

enum CommunityRoles{
  CUser
  CAdmin
}

enum TokenType {
  access
  refresh
  resetPassword
  verifyEmail
}